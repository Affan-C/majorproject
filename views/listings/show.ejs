<% layout("/layouts/boilerplate") %>

<div class="container mt-4">

  <!-- Title -->
  <div class="row">
    <div class="col-12 col-md-8 offset-md-2">
      <h3><%= listing.title %></h3>
    </div>
  </div>

  <!-- Listing Card -->
  <div class="row mt-3">
    <div class="col-12 col-md-8 offset-md-2">
      <div class="card show-card listing-card">
        <img src="<%= listing.image.url %>" 
             class="card-img-top img-fluid show-img" 
             alt="listing_image">

        <div class="card-body">
          <p class="card-text">Owned by <i><%= listing.owner.username %></i></p>
          <p class="card-text"><%= listing.description %></p>
          <p class="card-text">â‚¹ <%= listing.price.toLocaleString("en-IN") %></p>
          <p class="card-text"><%= listing.location %></p>
          <p class="card-text"><%= listing.country %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Edit/Delete Buttons -->
  <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
    <div class="row mt-3">
      <div class="col-12 col-md-8 offset-md-2 d-flex flex-column flex-md-row gap-2">

        <a href="/listings/<%= listing._id%>/edit" 
           class="btn btn-dark flex-fill">
           Edit
        </a>

        <form method="POST" 
              action="/listings/<%=listing._id%>/?_method=DELETE" 
              class="flex-fill">
          <button class="btn btn-dark w-100">Delete</button>
        </form>

      </div>
    </div>
  <% } %>

  <!-- Review Section -->
  <div class="row mt-4">
    <div class="col-12 col-md-8 offset-md-2">

      <hr>

      <% if(currUser) { %>
        <h4>Leave a Review</h4>

        <form action="/listings/<%= listing._id %>/reviews" 
              method="POST" 
              novalidate 
              class="needs-validation">

          <div class="mb-3 mt-3">
            <label class="form-label">Rating</label>
            <fieldset class="starability-slot">
              <input type="radio" name="review[rating]" value="1" checked />
              <input type="radio" name="review[rating]" value="2" />
              <input type="radio" name="review[rating]" value="3" />
              <input type="radio" name="review[rating]" value="4" />
              <input type="radio" name="review[rating]" value="5" />
            </fieldset>
          </div>

          <div class="mb-3">
            <label for="comment">Comment</label>
            <textarea name="review[comment]" 
                      id="comment" 
                      rows="5" 
                      class="form-control" 
                      required></textarea>
            <div class="invalid-feedback">
              Please add some comments for review
            </div>
          </div>

          <button class="btn btn-outline-dark">Submit</button>
        </form>
      <% } %>

      <!-- All Reviews -->
      <h5 class="mt-4"><b>All Reviews</b></h5>

      <div class="row mt-3">
        <% for(let review of listing.reviews) { %>

          <div class="col-12 col-md-6 col-lg-4 mb-3">
            <div class="card h-100">
              <div class="card-body">
                <h5 class="card-title">@<%= review.author.username %></h5>
                <p class="starability-result card-text"
                   data-rating="<%= review.rating %>">
                   <%= review.rating %>
                </p>
                <p class="card-text"><%= review.comment %></p>
              </div>

              <form class="p-3 pt-0"
                    method="POST"
                    action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button class="btn btn-sm btn-dark w-100">
                  Delete
                </button>
              </form>
            </div>
          </div>

        <% } %>
      </div>

    </div>
  </div>

</div>